<Window x:Class="TypeDitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TypeDitor"
        xmlns:commands="clr-namespace:TypeDitor.Commands"
        mc:Ignorable="d"
        Title="{Binding LoadedProject.ProjectName}" Height="768" Width="1024">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New Project" Command="{x:Static commands:ProjectCommands.NewProject}"/>
                <MenuItem Header="_Open Project" Command="{x:Static commands:ProjectCommands.OpenProject}"/>
                <MenuItem Header="_Save Project" Command="{x:Static commands:ProjectCommands.SaveProject}"/>
                <Separator/>
                <MenuItem Header="_Exit" Command="{x:Static commands:ProjectCommands.Exit}"/>
            </MenuItem>
        </Menu>
        <ToolBar DockPanel.Dock="Top">
            
        </ToolBar>
        <StatusBar DockPanel.Dock="Bottom">
            <Label Content="{Binding LoadedProject.Location}"/>
        </StatusBar>
        <DockPanel>
            
        </DockPanel>
    </DockPanel>
</Window>
