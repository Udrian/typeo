<Window x:Class="TypeDitor.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TypeDitor"
        xmlns:commands="clr-namespace:TypeDitor.Commands"
        mc:Ignorable="d"
        Title="Splash" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True">
    <DockPanel Margin="25">
        <TextBlock DockPanel.Dock="Top" FontSize="32">Welcome to TypeD</TextBlock>
        <Separator DockPanel.Dock="Top" Margin="0,0,0,25"/>

        <StackPanel DockPanel.Dock="Right" VerticalAlignment="Bottom">
            <Button Content="_Open a existing project" Width="175" Height="50" FontSize="14" HorizontalAlignment="Center" Command="{x:Static commands:ProjectCommands.OpenProject}" />
            <Button Content="_Create a new project" Width="175" Height="50" FontSize="14" HorizontalAlignment="Center" Command="{x:Static commands:ProjectCommands.NewProject}" />
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0, 0, 10, 0">
            <TextBlock FontSize="16" Margin="0, 0, 0, 10">Open recent...</TextBlock>
            <ListView>
            </ListView>
        </StackPanel>
    </DockPanel>
</Window>
