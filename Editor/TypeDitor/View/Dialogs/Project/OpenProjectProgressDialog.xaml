<Window x:Class="TypeDitor.View.Dialogs.Project.OpenProjectProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TypeDitor.View.Dialogs.Project"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="Opening project..." Height="150" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <ProgressBar Grid.Column="1" Grid.Row="3" Value="{Binding Progress}"/>
        <Label Grid.Column="1" Grid.Row="1" FontSize="16">Opening project...</Label>
    </Grid>
</Window>
